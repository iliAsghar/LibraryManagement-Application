<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - بخوان</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lalezar&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Vazirmatn:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" onclick="window.location='@Url.Action("","Home")';">
            <h1 class="title">سامانه مدیریت کتابخوانهء <span>بخوان</span></h1>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link profilestyle" onclick="window.location='@Url.Action("Profile","Account")';">
                        <p>@ViewBag.UserFullName</p>
                        <img src="@ViewBag.UserPfpPath" alt="پروفایل" class="profile-image" />
                    </a>
                </li>
                <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("","Home")';">صفحه اصلی</a></li>

                @if (ViewBag.UserRole == "Admin")
                {
                    <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("UserList","Users")';">کاربرها</a></li>
                    <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("Index","Admins")';">داشبورد</a></li>
                }

                @if (ViewBag.UserRole == "BookKeeper")
                {
                    <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("MemberList","Users")';">اعضا</a></li>
                }

                @if (ViewBag.UserRole == "User")
                {
                    <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("current","Transactions")';">کوله پشتی</a></li>
                }

                <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("","Transactions")';">امانت ها</a></li>
                <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("","Books")';">کتاب ها</a></li>
                <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("Contact","Home")';">تماس با ما</a></li>
                <li class="nav-item"><a class="nav-link" onclick="window.location='@Url.Action("Logout","Account")';">خروج</a></li>
            </ul>
        </div>
    </header>


    <main>
        @RenderBody()
    </main>

    <footer>
        <p>Made in a hurry, by AliAsghar Zare (4006213069) & MohammadJavad Nemati (4006213175)</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/81541dc3f8.js" crossorigin="anonymous"></script>
    <style>

        .popup-results {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            /*    border: 1px solid #ccc;*/
            background: white;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            max-height: 180px;
            overflow-y: auto;
            z-index: 1000;
            margin-top: 0.5rem;
            color: black;
        }

        .no-results {
            padding: 0.5rem 1rem;
            font-size: 0.85rem;
            color: #A5A5A5;
            text-align: center;
        }

        .result-item {
            display: flex;
            padding: 0.5rem 1rem !important;
            gap: 1.5rem;
            transition: background-color 0.2s;
            cursor: pointer;
            color: black !important;
        }

            .result-item:hover {
                background-color: #f9f9f9;
            }

            .result-item img {
                width: 50px;
                height: 75px;
                object-fit: cover;
                border-radius: 4px;
            }

            .result-item div {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
            }

            .result-item a {
                font-family: "Vazirmatn", sans-serif;
                font-size: 0.85rem;
                font-weight: 600;
                text-decoration: none;
                margin-top: 0.25rem;
            }

            .result-item p {
                font-size: 0.75rem;
                margin: 0;
            }

    </style>
    <script>
        $(document).ready(function () {
            $('#searchQuery').on('input', function () {
                let query = $(this).val().trim();
                if (query.length > 2) {
                    $.ajax({
                        url: '/Books/Search',
                        data: { query: query, isPopup: true },
                        success: function (response) {
                            let popup = $('#searchResultsPopup');
                            popup.empty();
                            if (response.results && response.results.length > 0) {
                                response.results.forEach(book => {
                                    popup.append(`
                                        <div class="result-item" onclick="window.location='@Url.Action("ShowBook", "Books")?id=${book.id}';">
                                            <img src="${book.coverPath}" />
                                            <div>
                                                <p>${book.title}</p>
                                                <p>by ${book.author}</p>
                                            </div>
                                        </div>
                                    `);
                                });
                            } else {
                                popup.append('<div class="no-results">No results found</div>');
                            }
                        }
                    });
                } else {
                    $('#searchResultsPopup').empty();
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
