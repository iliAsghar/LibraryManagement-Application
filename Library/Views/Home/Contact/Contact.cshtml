@{
    ViewData["Title"] = "تماس با ما";
}

<div class="contact-main">
    <h2 class="title-list">@Model.Title</h2>

    @if (string.IsNullOrWhiteSpace(Model.Description) &&
    string.IsNullOrWhiteSpace(Model.Address) &&
    string.IsNullOrWhiteSpace(Model.PhoneNumber) &&
    string.IsNullOrWhiteSpace(Model.Email))
    {
        <p>هیچ اطلاعات تماسی موجود نیست.</p>

        @if (ViewBag.UserRole == "Admin")
        {
            <a asp-action="EditContact" class="btn btn-primary">
                افزودن اطلاعات تماس
            </a>
        }
    }
    else
    {
        <div class="contact-detail">
            <strong>توضیحات:</strong>
            <p>@Model.Description</p>
        </div>

        <div class="contact-detail">
            <strong>آدرس:</strong>
            <p>@Model.Address</p>
        </div>

        <div class="contact-detail">
            <strong>شماره تلفن:</strong>
            <p>@Model.PhoneNumber</p>
        </div>

        <div class="contact-detail">
            <strong>ایمیل:</strong>
            <p>@Model.Email</p>
        </div>

        @if (ViewBag.UserRole == "Admin")
        {
            <a asp-controller="Home" asp-action="EditContact" class="btn btn-secondary">
                ویرایش اطلاعات تماس
            </a>
        }

    }
</div>

<style>
    .contact-main {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 2rem;
        width: 100%;
    }

    .title-list {
        font-family: "Lalezar", sans-serif;
        font-size: 3.35rem;
        color: #DC5F00;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .contact-detail {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 1rem;
        width: 100%;
        max-width: 600px;
        margin-bottom: 1rem;
        direction: rtl;
    }

        .contact-detail strong {
            font-size: 1.2rem;
            color: #333;
        }

        .contact-detail p {
            font-size: 1rem;
            color: #555;
        }

    .btn {
        padding: 0.8rem 2rem;
        border-radius: 5px;
        font-size: 1rem;
        text-decoration: none;
        color: white;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s ease-in-out;
        margin-top: 1rem;
        display: inline-block;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
            transform: scale(1.05);
        }
</style>
