@{
    ViewData["Title"] = "صفحه اصلی";
}

<style>
    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #f4f4f4;
    }

</style>

<div class="index-main">
    <h3>ادمین @ViewBag.UserFullName</h3>
    <h4>خوش آمدید!</h4>
    <div class="panel">
        <h2 class="panel-title">دسترسی سریع</h2>
        <div class="panel-list">

            <div class="panel-list-item" onclick="window.location='@Url.Action("UserList", "Users")';">
                <i class="fa-solid fa-users"></i>
                <p>لیست کاربرها</p>
            </div>
            
            <div class="panel-list-item" onclick="window.location='@Url.Action("AddBook", "Books")';">
                <i class="fa-solid fa-book"></i>
                <p>افزودن کتاب</p>
            </div>

            <div class="panel-list-item" onclick="window.location='@Url.Action("ReturnTransaction", "Transactions")';">
                <i class="fa-solid fa-box-open"></i>
                <p>بازگشت تراکنش</p>
            </div>
        </div>
    </div>
</div>