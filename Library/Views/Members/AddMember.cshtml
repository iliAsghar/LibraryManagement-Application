@{
    ViewData["Title"] = "افزودن عضو";
}

<style>
    main {
        display: flex;
        flex-direction: column;
        justify-content: center;
        background-color: #f4f4f4;
    }

    .add-member-form {
        font-family: "Vazir", sans-serif;
        width: min(50rem, 100%);
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 1rem;
        gap: 1rem;
        margin-inline: auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        border-radius: 10px;
    }

        .add-member-form h3 {
        font-family: "Lalezar", sans-serif;
        font-size: 3rem;
        font-weight: 300;
        text-align: center;
        border-bottom: 1px solid #DC5F00;
        align-self: center;
    }

        .add-member-form div {
        display: flex;
        flex-direction: column;
    }

        .add-member-form input, .add-member-form textarea {
        border-radius: 4px;
        border: 1px solid gray;
        padding: 0.5rem;
    }

    .file-input {
        display: none;
    }

    .file-container {
        display: flex;
        align-items: center;
        border: 1px solid gray;
        border-radius: 4px;
        overflow: hidden;
        flex-direction: row-reverse !important;
    }

    .custom-file-label, .file-info span {
        width: 50%;
        padding: 0.5rem;
        text-align: center;
        cursor: pointer;
    }

    .custom-file-label {
        background-color: #f9f9f9;
        color: #333;
        border-right: 1px solid gray;
    }

    .file-container span {
        width: 50%;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        padding-inline: 1rem;
        color: #878787;
    }

    .add-member-form button {
        margin-top: 1rem;
        border: none;
        border-radius: 5px;
        background-color: white;
        padding: 0.5rem 1rem;
        font-size: 1.25rem;
        background-color: #e6e6e6;
        transition: all ease-in-out 200ms;
    }

        .add-member-form button:hover {
        background-color: #DC5F00;
        color: white;
        transition: all ease-in-out 50ms;
    }
</style>
<form asp-action="AddMemberToDB" asp-controller="Members" class="add-member-form" method="post" enctype="multipart/form-data">
    <h3>افزودن کاربر</h3>
    <div>
        <label for="Name">نام</label>
        <input type="text" id="Name" name="Name" required />
    </div>

    <div>
        <label for="LastName">نام خانوادگی</label>
        <input type="text" id="LastName" name="LastName" required />
    </div>

    <div>
        <label for="NationalId">کد ملی</label>
        <input type="text" id="NationalId" name="NationalId" required />
    </div>

    <div>
        <label for="Email">پست الکترونیک</label>
        <input type="email" id="Email" name="Email" required />
    </div>

    <button type="submit">اضافه کردن</button>
</form>