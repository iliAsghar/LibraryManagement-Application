<main>
    <h1 class="title-list">پروفایل کاربر: @Model.Name @Model.LastName</h1>

    <section class="user-details">
        <h2>اطلاعات شخصی</h2>
        <div class="profile-info">
            <div class="profile-picture">
                <img src="@ViewBag.UserPfpPath" alt="عکس کاربر" />
            </div>
            <div class="personal-info">
                <p><strong>نام:</strong> @Model.Name @Model.LastName</p>
                <p><strong>ایمیل:</strong> @Model.Email</p>
                <p><strong>شماره تماس:</strong> @Model.PhoneNumber</p>
                <p><strong>کد ملی:</strong> @Model.NationalId</p>
                <p><strong>نقش:</strong> @Model.Role</p>
            </div>
        </div>
    </section>

    @if (Model.Transactions != null && Model.Transactions.Count > 0)
    {
        <section class="user-details">
            <h2>تراکنش‌ها</h2>
            <table>
                <thead>
                    <tr>
                        <th>تاریخ نهایی سازی</th>
                        <th>تعداد آیتم‌ها</th>
                        <th>جزئیات آیتم‌ها</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model.Transactions)
                    {
                        <tr>
                            <td>@(transaction.RequestDate == default(DateTime) ? "-" : transaction.RequestDate.ToString("yyyy/MM/dd"))</td>
                            <td>@transaction.TransactionItems.Count</td>
                            <td>
                                <ul>
                                    @foreach (var item in transaction.TransactionItems)
                                    {
                                        <li>@item.Book.Title - تعداد: @item.Quantity</li>
                                    }
                                </ul>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    }
    else
    {
        <p>تراکنشی موجود نیست.</p>
    }

    <div class="actions">
        @if (ViewBag.UserRole == "Admin")
        {
            @if (Model.Role == "User")
            {
                <a href="javascript:void(0)"
                   class="btn btn-success"
                   onclick="window.location.href='@Url.Action("PromoteToBookKeeper", "Users", new { id = Model.Id })';">
                    ارتقا به کتابدار
                </a>
                <a href="javascript:void(0)"
                   class="btn btn-success disabled"
                   onclick="window.location.href='@Url.Action("DemoteToMember", "Users", new { id = Model.Id })';">
                    تغییر به عضو عادی
                </a>
            }

            @if (Model.Role == "BookKeeper")
            {
                <a href="javascript:void(0)"
                   class="btn btn-success disabled"
                   onclick="window.location.href='@Url.Action("PromoteToBookKeeper", "Users", new { id = Model.Id })';">
                    ارتقا به کتابدار
                </a>
                <a href="javascript:void(0)"
                   class="btn btn-success"
                   onclick="window.location.href='@Url.Action("DemoteToMember", "Users", new { id = Model.Id })';">
                    تغییر به عضو عادی
                </a>
            }
        }
        @if (ViewBag.UserRole == "Admin")
        {
            <a onclick="window.location.href='@Url.Action("UserList", "Users")';" class="btn btn-secondary">بازگشت به لیست کاربران</a>
        }
        else
        {
            <a onclick="window.location.href='@Url.Action("MemberList", "Users")';" class="btn btn-secondary">بازگشت به لیست اعضا</a>
        }
    </div>
</main>
@if (TempData["ErrorMessage"] != null)
{
    <script type="text/javascript">
        alert('@Html.Raw(TempData["ErrorMessage"])');
    </script>
}


<style>
    main {
        font-family: "Vazir", sans-serif;
        background-color: #f4f4f4;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 1rem;
    }

    .user-details {
        width: min(55rem, 100%);
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 1rem;
        padding: 1rem;
        font-size: 1rem;
        direction: rtl;
    }

    .profile-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .profile-picture img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 1rem;
        border: 3px solid #DC5F00;
    }

    .personal-info p {
        font-size: 1rem;
        margin: 0.5rem 0;
        color: #333;
    }

    table {
        width: 100%;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
        overflow: hidden;
        direction: rtl;
    }

    thead {
        background-color: #DC5F00;
        color: white;
        text-align: center;
    }

    th, td {
        padding: 1rem;
        border: 1px solid #ddd;
        text-align: center;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    th {
        font-weight: bold;
        font-size: 1.2rem;
    }

    td {
        font-size: 1rem;
        color: #333;
    }

    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        justify-content: center;
    }

    .btn {
        padding: 0.8rem 2rem;
        border-radius: 5px;
        font-size: 1rem;
        text-decoration: none;
        color: white;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s ease-in-out;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #a71d2a;
            transform: scale(1.05);
        }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
            transform: scale(1.05);
        }

    .title-list {
        font-family: "Lalezar", sans-serif;
        font-size: 3rem;
        margin-bottom: .5rem;
        margin-top: 2rem;
    }
</style>
