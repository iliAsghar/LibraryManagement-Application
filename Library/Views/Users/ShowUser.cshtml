<style>
    body {
        font-family: "Vazir", sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .user-details {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 2rem;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        margin: 2rem auto;
        width: 90%;
        max-width: 800px;
    }

    h2 {
        font-family: "Lalezar", sans-serif;
        font-size: 2.5rem;
        color: #DC5F00;
        margin-bottom: 2rem;
    }

    table {
        width: 100%;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
        overflow: hidden;
        direction: rtl;
    }

    thead {
        background-color: #DC5F00;
        color: white;
        text-align: center;
    }

    th, td {
        padding: 1rem;
        border: 1px solid #ddd;
        direction: rtl !important;
        font-size: 1rem;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    th {
        font-weight: bold;
        font-size: 1.2rem;
        white-space: nowrap;
    }

    td {
        color: #333;
    }

    .actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        justify-content: center;
    }

    .btn {
        padding: 0.8rem 2rem;
        border-radius: 5px;
        font-size: 1rem;
        text-decoration: none;
        color: white;
        text-align: center;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s ease-in-out;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #a71d2a;
            transform: scale(1.05);
        }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

        .btn-secondary:hover {
            background-color: #495057;
            transform: scale(1.05);
        }

    .title-list {
        font-family: "Lalezar", sans-serif;
        font-size: 3rem;
        margin-bottom: .5rem;
        margin-top: 2rem;
    }

    .add-book-btn {
        text-align: center;
        padding: .5rem;
        cursor: pointer;
        font-size: 1.1rem;
        color: #DC5F00;
        transition: all 0.3s ease;
        font-weight: bold;
        border-radius: 5px;
    }

        .add-book-btn:hover {
            background-color: #DC5F00;
            color: white;
            transform: scale(1.05);
        }

        .add-book-btn a {
            text-decoration: none;
            color: inherit;
        }

        .add-book-btn:active {
            transform: scale(1);
        }

</style>
<div class="user-details">
    <h2>جزئیات کاربر</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ایمیل</th>
                <th>نام</th>
                <th>نام خانوادگی</th>
                <th>کد ملی</th>
                <th>نقش</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Email</td>
                <td>@Model.Name</td>
                <td>@Model.LastName</td>
                <td>@Model.NationalId</td>
                <td>@Model.Role</td>
            </tr>
        </tbody>
    </table>

    <h2>تراکنش‌ها</h2>
    <table class="table">
        <thead>
            <tr>
                <th>تاریخ تراکنش</th>
                <th>تعداد آیتم‌ها</th>
                <th>جزئیات آیتم‌ها</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.TransactionDate.ToShortDateString()</td>
                    <td>@transaction.TransactionItems.Count</td>
                    <td>
                        <ul>
                            @foreach (var item in transaction.TransactionItems)
                            {
                                <li>@item.Book.Title - تعداد: @item.Quantity</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="actions">
        @if (ViewBag.UserRole == "Admin")
        {
            @if (Model.Role == "User")
            {
                <a href="javascript:void(0)"
                   class="btn btn-success"
                   onclick="window.location.href='@Url.Action("PromoteToBookKeeper", "Users", new { id = Model.Id })';"
                @Model.Role= ="BookKeeper" ? disabled>
                    ارتقا به کتابدار
                </a>

                <a href="javascript:void(0)"
                   class="btn btn-success disabled"
                   onclick="window.location.href='@Url.Action("DemoteToMember", "Users", new { id = Model.Id })';">
                    تغییر به عضو عادی
                </a>
            }

            @if (Model.Role == "BookKeeper")
            {
                <a href="javascript:void(0)"
                   class="btn btn-success disabled"
                   onclick="window.location.href='@Url.Action("PromoteToBookKeeper", "Users", new { id = Model.Id })';"
                @Model.Role= ="BookKeeper" ? disabled>
                    ارتقا به کتابدار
                </a>

                <a href="javascript:void(0)"
                   class="btn btn-success"
                   onclick="window.location.href='@Url.Action("DemoteToMember", "Users", new { id = Model.Id })';">
                    تغییر به عضو عادی
                </a>
            }
        }
        @if(ViewBag.UserRole == "Admin") {
            <a onclick="window.location.href='@Url.Action("UserList", "Users")';" class="btn btn-secondary">بازگشت به لیست کاربران</a>
        } else {
            <a onclick="window.location.href='@Url.Action("MemberList", "Users")';" class="btn btn-secondary">بازگشت به لیست اعضا</a>
        }
    </div>
</div>
