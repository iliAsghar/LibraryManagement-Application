<style>
    main {
        font-family: "Vazir", sans-serif;
        background-color: #f4f4f4;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
    }

    table {
        width: min(55rem, 100%);
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-collapse: collapse;
        overflow: hidden;
    }

    thead {
        background-color: #DC5F00;
        color: white;
        text-align: center;
    }

    th, td {
        padding: 1rem;
        border: 1px solid #ddd;
        direction: rtl !important;
        text-align: center;
    }

    tbody tr:hover {
        background-color: #f1f1f1;
    }

    th {
        font-weight: bold;
        font-size: 1.2rem;
    }

    td {
        font-size: 1rem;
        color: #333;
    }

    .title-list {
        font-family: "Lalezar", sans-serif;
        font-size: 3rem;
        margin-bottom: .5rem;
        margin-top: 2rem;
    }

    .add-member-row {
        background-color: #f0f0f0 !important
    }

    .add-member-btn {
        text-align: center;
        padding: .5rem;
        cursor: pointer;
    }

        .add-member-btn:hover {
        background-color: #e0e0e0;
    }
</style>

<h2>لیست @ViewData["Title"]</h2>

<table>
    <thead>
        <tr>
            <th>کد ملی</th>
            <th>نام</th>
            <th>نام خانوادگی</th>
            <th>پست الکترونیک</th>
            <th>نقش</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="window.location.href='@Url.Action("ShowUser", "Users", new { id = item.Id })'" style="cursor: pointer;">
                <td>@item.NationalId</td>
                <td>@item.Name</td>
                <td>@item.Lastname</td>
                <td>@item.Email</td>
                <td>@item.Role</td>
            </tr>
        }

        <tr style=" background-color: #818185;">
            <td style="padding: 0.25rem" colspan="5"> </td>
        </tr>
    </tbody>
    
</table>

@{
    var alertMessage = TempData["AlertMessage"] as string;
}

@if (!string.IsNullOrEmpty(alertMessage))
{
    <script>
        alert('عضو جدید با موفقیت اضافه شد!');
    </script>
}