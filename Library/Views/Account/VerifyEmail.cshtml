@{
    ViewData["Title"] = "احراز هویت";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - بخوان</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Library.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lalezar&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Vazirmatn:wght@100..900&display=swap" rel="stylesheet">
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
        }

        * {
            margin: 0;
        }

        body {
            line-height: 1.5;
            -webkit-font-smoothing: antialiased;
        }

        img, picture, video, canvas, svg {
            display: block;
            max-width: 100%;
        }

        input, button, textarea, select {
            font: inherit;
        }

        p, h1, h2, h3, h4, h5, h6 {
            overflow-wrap: break-word;
        }

        p {
            text-wrap: pretty;
            margin: 0;
        }

        h1, h2, h3, h4, h5, h6 {
            text-wrap: balance;
        }

        #root, #__next {
            isolation: isolate;
        }

        ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .main-title {
            cursor: pointer;
        }

        body {
            font-family: "Vazirmatn", sans-serif;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: .5rem 2.5rem;
            background-color: #373A40;
            color: white;
        }

            header a {
                color: inherit;
                text-decoration: none;
            }

                header a:hover {
                    color: inherit;
                }

        .title {
            font-family: "Lalezar", sans-serif;
            font-size: 1.25rem;
            font-weight: 100;
            margin: 0;
        }

            .title span {
                font-family: inherit;
                font-size: 2.5rem;
                color: #DC5F00;
            }

        .nav-list {
            display: flex;
            gap: 2rem;
        }

            .nav-list li {
                cursor: pointer;
                transition: all ease-in-out 200ms;
                font-weight: 500;
            }

                .nav-list li:hover {
                    color: #DC5F00;
                    transition: all ease-in-out 50ms;
                }

        main {
            padding: 1rem 0;
        }

        footer {
            font-family: "Noto Sans", sans-serif;
            font-weight: 600;
            display: flex;
            justify-content: center;
            background-color: gray;
            background-color: #686D76;
            color: white;
            padding: .5rem;
            text-align: center;
        }

        main {
            display: flex;
            flex-direction: column;
            justify-content: center;
            background-color: #f4f4f4;
            padding: 2rem;
        }

        .edit-form {
            font-family: "Vazir", sans-serif;
            width: min(40rem, 100%);
            display: flex;
            flex-direction: column;
            padding: 2rem;
            margin-inline: auto;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            background-color: white;
            border-radius: 10px;
        }

            .edit-form h1 {
                font-family: "Lalezar", sans-serif;
                font-size: 3rem;
                font-weight: 300;
                text-align: center;
                border-bottom: 1px solid #DC5F00;
            }

            .edit-form .form-group {
                display: flex;
                flex-direction: column;
                gap: 0.5rem;
                margin-bottom: 0.5rem;
            }

            .edit-form label {
                font-size: 1rem;
                color: #333;
            }

            .edit-form input[type="text"] {
                border-radius: 4px;
                border: 1px solid gray;
                padding: 0.5rem;
                font-size: 1rem;
                direction: ltr;
                text-align: left;
            }

            .edit-form input[type="submit"] {
                border: none;
                border-radius: 5px;
                background-color: white;
                padding: 0.5rem 1rem;
                font-size: 1.25rem;
                background-color: #e6e6e6;
                transition: all ease-in-out 200ms;
                cursor: pointer;
                color: black;
            }

                .edit-form input[type="submit"]:hover {
                    background-color: #DC5F00;
                    color: white;
                    transition: all ease-in-out 50ms;
                }

            .edit-form .text-danger {
                font-size: 0.875rem;
                color: #ff4d4d;
            }

        .form-group.other {
            text-align: center;
            margin-top: 1rem;
        }

            .form-group.other a {
                display: inline-block;
                cursor: pointer;
                transition: all ease-in-out 200ms;
            }

                .form-group.other a:hover {
                    color: #DC5F00;
                    transform: scale(1.06);
                    transition: all ease-in-out 50ms;
                }

        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        input[type=number] {
            -moz-appearance: textfield;
        }

        .file-container {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-top: 0.5rem;
        }

        .custom-file-label {
            background-color: #f4f4f4;
            padding: 0.8rem 1rem;
            border-radius: 5px;
            border: 1px solid #ddd;
            cursor: pointer;
            text-align: center;
            flex-grow: 1;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .custom-file-label:hover {
                background-color: #DC5F00;
                color: white;
            }

        #profile-file-name {
            color: #666;
            font-size: 0.9rem;
        }

        input[type="file"] {
            opacity: 0;
            position: absolute;
            z-index: -1;
        }

        .text-danger {
            color: red;
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

    </style>
</head>
<body>

    <header>
        <a onclick="window.location='@Url.Action("","Home")';" class="main-title">
            <h1 class="title">سامانه مدیریت کتابخوانهء <span>بخوان</span></h1>
        </a>
        <ul class="nav-list">
            <li><a onclick="window.location='@Url.Action("Contact","Home")';">تماس با ما</a></li>
        </ul>
    </header>
    <main>
        <div class="edit-form">
            <h1>احراز هویت</h1>
            <form asp-action="VerifyEmail" method="post">
                <div class="form-group">
                    <label for="token">لطفا کد ارسال شده به ایمیل خود را وارد کنید:</label>
                    <input type="text" id="token" name="Token" required />
                    <input type="hidden" id="userId" name="userId" value="@ViewBag.UserId" />
                </div>
                <div class="form-group">
                    <input type="submit" value="تایید" />
                </div>
            </form>
        </div>
    </main>
    <footer>
        <p>Made in a hurry, by AliAsghar Zare (4006213069) & MohammadJavad Nemati (4006213175)</p>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/81541dc3f8.js" crossorigin="anonymous"></script>
</body>
</html>