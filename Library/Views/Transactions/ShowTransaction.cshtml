@{
    ViewData["Title"] = "مشاهده امانت";
}

<style>

    .inline-link {
        color: blue;
        text-decoration: underline;
        font-weight: bold;
        cursor: pointer;
    }

        .inline-link:hover {
            color: darkblue;
            text-decoration: none;
        }

    main {
        font-family: "Vazir", sans-serif;
        background-color: #f4f4f4;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        padding: 2rem;
    }

    .details-container {
        width: min(55rem, 100%);
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
        text-align: rtl;
        font-size: 1rem;
        color: #333;
    }

        .details-container h1 {
            font-family: "Lalezar", sans-serif;
            font-size: 2.5rem;
            color: #DC5F00;
            margin-bottom: 1rem;
        }

        .details-container p {
            font-size: 1.1rem;
            margin: 0.5rem 0;
        }

        .details-container ul {
            list-style-type: none;
            padding: 0;
        }

        .details-container li {
            background-color: #f9f9f9;
            margin-bottom: 1rem;
            padding: 1rem;
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
        }

            .details-container li img {
                width: 20%;
                height: auto;
                margin-left: 1rem;
            }

            .details-container li span {
                font-weight: bold;
                color: #333;
            }

        .details-container ul li:not(:last-child) {
            margin-bottom: 1rem;
        }

        .details-container p span {
            font-weight: bold;
        }

        .details-container h2 {
            margin-top: 2rem;
            font-size: 1.3rem;
        }

    .finalize-button {
        margin-top: 2rem;
        padding: 0.75rem 1.5rem;
        background-color: #DC5F00;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
    }

        .finalize-button:disabled {
            background-color: #b0b0b0;
            cursor: not-allowed;
        }

        .finalize-button:hover:not(:disabled) {
            background-color: #b94b00;
        }
</style>

<div class="details-container">
    <h1>جزئیات امانت</h1>

    @if (TempData["NoActiveTransaction"] != null)
    {
        <p style="color: red;">@TempData["NoActiveTransaction"] - <a class="inline-link">کتاب انتخاب کنید...</a></p>
    }
    else if (Model == null || Model.Items == null || Model.Items.Count == 0)
    {
        <p>هیچ امانتی یافت نشد.</p>
    }
    else
    {
        <p><span>شماره امانت:</span> @Model.Id</p>
        <p><span>وضعیت:</span> @(Model.Status)</p>
        <p><span>تاریخ شروع امانت:</span> @(Model.TransactionDate.ToString("yyyy/MM/dd")) </p>

        <h2>لیست کتاب‌ها</h2>
        <ul>
            @foreach (var item in Model.Items)
            {
                <li>
                    <img src="@(item.BookCoverPath ?? "/images/default-cover.jpg")" alt="Book Cover" />
                    <div>
                        <p><span>کتاب:</span> @item.BookTitle</p>
                        <p><span>نویسنده:</span> @item.Author</p>
                        <p><span>تعداد:</span> @item.Quantity</p>
                        <p><span>توضیحات:</span> @item.Description</p>
                    </div>
                </li>
            }
        </ul>

        <form method="post" action="/Transactions/FinalizeTransaction">
            <input type="hidden" name="transactionId" value="@Model.Id" />
            <button type="submit"
                    class="finalize-button"
             ?
            @(Model.Status != TransactionStatus.UnFinalized) ? "disabled" : "" ))
                    title="@(Model.Status != TransactionStatus.UnFinalized) ? "این امانت قبلاً نهایی شده است" : "")">
                نهایی کردن امانت
            </button>
        </form>
    }
</div>
