<table>
    <thead>
        <tr>
            <th>شماره امانت</th>
            <th>کتاب ها</th>
            <th>تاریخ تراکنش</th>
            <th>وضعیت</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any(t => !t.IsFinalized))
        {
            var unfinalizedTransaction = Model.FirstOrDefault(t => !t.IsFinalized);
            <tr onclick="window.location.href='/transactions/showtransaction/@unfinalizedTransaction.Id'" style="background-color: #ffefcc; cursor: pointer;">
                <td>@unfinalizedTransaction.Id</td>
                <td>
                    <ul>
                        @foreach (var item in unfinalizedTransaction.TransactionItems)
                        {
                            <li>@item.Book?.Title * @item.Quantity</li>
                        }
                    </ul>
                </td>
                <td>@unfinalizedTransaction.TransactionDate?.ToString("yyyy/MM/dd")</td>
                <td>در انتظار تایید / باز</td>
            </tr>
        }

        @foreach (var transaction in Model.Where(t => t.IsFinalized))
        {
            <tr onclick="window.location.href='/transactions/showtransaction/@transaction.Id'" style="cursor: pointer;">
                <td>@transaction.Id</td>
                <td>
                    <ul>
                        @foreach (var item in transaction.TransactionItems)
                        {
                            <li>@item.Book?.Title * @item.Quantity</li>
                        }
                    </ul>
                </td>
                <td>@transaction.TransactionDate?.ToString("yyyy/MM/dd")</td>
                <td>تایید شده / بسته</td>
            </tr>
        }

        <tr style="background-color: #818185;">
            <td style="padding: 0.25rem" colspan="5"></td>
        </tr>
    </tbody>
</table>
