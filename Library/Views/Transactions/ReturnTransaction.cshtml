@model Library.Models.Transaction

@{
    ViewData["Title"] = "بازگشت امانت";
}

<style>

    .login-form {
        font-family: "Vazir", sans-serif;
        width: min(40rem, 100%);
        display: flex;
        flex-direction: column;
        padding: 2rem;
        margin-inline: auto;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: white;
        border-radius: 10px;
    }

    .login-form h1 {
        font-family: "Lalezar", sans-serif;
        font-size: 3rem;
        font-weight: 300;
        text-align: center;
        border-bottom: 1px solid #DC5F00;
    }

    .login-form .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .login-form label {
        font-size: 1rem;
        color: #333;
    }

    .login-form input[type="text"] {
        border-radius: 4px;
        border: 1px solid gray;
        padding: 0.5rem;
        font-size: 1rem;
        direction: ltr;
        text-align: left;
    }

    .login-form input[type="submit"] {
        border: none;
        border-radius: 5px;
        background-color: white;
        padding: 0.5rem 1rem;
        font-size: 1.25rem;
        background-color: #e6e6e6;
        transition: all ease-in-out 200ms;
        cursor: pointer;
    }

    .login-form input[type="submit"]:hover {
        background-color: #DC5F00;
        color: white;
        transition: all ease-in-out 50ms;
    }

    .text-danger {
        font-size: 0.875rem;
        color: #ff4d4d;
    }
</style>
<div class="login-form">
    <h1>بازگشت امانت</h1>
    <form asp-action="ReturnTransaction" method="post">
        <div class="form-group">
            <label for="userNId">کد ملی کاربر:</label>
            <input type="text" id="userNId" name="userNId"
                    value="@ViewData["UserNId"]" placeholder="Enter User National ID" required />
        </div>
        <input type="submit" value="دریافت امانت فعال" />
    </form>
</div>